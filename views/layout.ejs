       ) {%>
        <li class="nav-item">
          <a class="nav-link"
           href="/patients/myappointments">My Appointments</a>
        </li>
        <li class="nav-item">
          <a class="nav-link"
           href="/patients/viewprescription">Past Prescriptions</a>
        </li>
        <%}%>
        
        <% if(!user) { %>
          <li class="nav-item">
            <a class="nav-link" href="/user/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/user/register">Register here!</a>
          </li>
          <% } %>
