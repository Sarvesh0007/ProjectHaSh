  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
     <%  if(user) {%>
      <a class="navbar-brand" href="#"><%= user.name %> </a>
      <%} %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    
      <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home
              <span class="sr-only">(current)</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about">About us</a>
          </li>
          <% if(user && user.role === 8990) { %>
            <li class="nav-item">
              <a class="nav-link" href="/admin/getallusers">Promote User</a>
            </li>
           
            <% } %>
          <% if(user && user.role === 1) { %>
            <li class="nav-item">
              <a class="nav-link" href="/patients/bookDoctor">Book Appointment</a>
            </li>
           
            <% } %>
        </ul>

      <ul class="float-right navbar-nav">
       <% if(user
       ) {%>
        <li class="nav-item">
          <a class="nav-link"
           href="/user/logout">Logout</a>
        </li>
        <%}%>
        <% if(user && user.role===2
       ) {%>
        
        <li class="nav-item">
          <a class="nav-link"
           href="/doctors/myappointments">My Appointments</a>
        </li>
        <%}%>
